<Layout title="Tanishq" description="Buy the best jewellery collections">
<header class="header">
  <div class="top-fixed">
    <div class="top-row">
      <!-- Logo Left -->
      <div class="logo">
        <img src="/tanishq/logo.png" alt="Tanishq Logo" />
      </div>

      <!-- Search Bar Center -->
      <div class="search-bar">
        <input type="text" placeholder="Search for jewellery..." />
        <button><i class="fas fa-search"></i></button>
      </div>

      <!-- Icons Right -->
      <div class="icons">
        <a href="#"><i class="fas fa-heart"></i></a>
        <a href="#"><i class="fas fa-shopping-cart"></i></a>
        <a href="#"><i class="fas fa-user"></i></a>
      </div>
    </div>

    <!-- Navigation Bar -->
    <nav class="nav">
      <a href="#"><i class="fas fa-gem"></i> All Jewellery</a>
      <a href="#"><i class="fas fa-star"></i> Daily Wear</a>
      <a href="#"><i class="fas fa-layer-group"></i> Collections</a>
