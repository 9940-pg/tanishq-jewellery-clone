---
import "../styles/styles.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Tanishq Jewellery</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <header>
      <h1>Tanishq Jewellery</h1>
      <nav>
        <ul>
          <li><a href="#rings">Rings</a></li>
          <li><a href="#necklaces">Necklaces</a></li>
          <li><a href="#earrings">Earrings</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <section id="rings" class="product-section">
        <h2>Rings</h2>
        <div class="products">
          <div class="product-card">
            <img src="/images/ring1.jpg" alt="Gold Ring" />
            <h3>Elegant Gold Ring</h3>
            <p>Price: ₹15,000</p>
            <button class="buy-btn" data-product="Elegant Gold Ring">Buy Now</button>
          </div>
          <div class="product-card">
            <img src="/images/ring2.jpg" alt="Diamond Ring" />
            <h3>Diamond Studded Ring</h3>
            <p>Price: ₹45,000</p>
            <button class="buy-btn" data-product="Diamond Studded Ring">Buy Now</button>
          </div>
        </div>
      </section>

      <section id="necklaces" class="product-section">
        <h2>Necklaces</h2>
        <div class="products">
          <div class="product-card">
            <img src="/images/necklace1.jpg" alt="Gold Necklace" />
            <h3>Classic Gold Necklace</h3>
            <p>Price: ₹30,000</p>
            <button class="buy-btn" data-product="Classic Gold Necklace">Buy Now</button>
          </div>
          <div class="product-card">
            <img src="/images/necklace2.jpg" alt="Pearl Necklace" />
            <h3>Pearl Necklace</h3>
            <p>Price: ₹25,000</p>
            <button class="buy-btn" data-product="Pearl Necklace">Buy Now</button>
          </div>
        </div>
      </section>

      <section id="earrings" class="product-section">
        <h2>Earrings</h2>
        <div class="products">
          <div class="product-card">
            <img src="/images/earring1.jpg" alt="Gold Earrings" />
            <h3>Gold Hoop Earrings</h3>
            <p>Price: ₹12,000</p>
            <button class="buy-btn" data-product="Gold Hoop Earrings">Buy Now</button>
          </div>
          <div class="product-card">
            <img src="/images/earring2.jpg" alt="Diamond Earrings" />
            <h3>Diamond Stud Earrings</h3>
            <p>Price: ₹40,000</p>
            <button class="buy-btn" data-product="Diamond Stud Earrings">Buy Now</button>
          </div>
        </div>
      </section>
    </main>

    <div id="modal" class="modal hidden">
      <div class="modal-content">
        <span id="close-modal" class="close">&times;</span>
        <h2>Purchase Product</h2>
        <p id="product-name"></p>
        <form id="purchase-form">
          <label>
            Name:
            <input type="text" name="name" required />
          </label>
          <label>
            Email:
            <input type="email" name="email" required />
          </label>
          <button type="submit">Confirm Purchase</button>
        </form>
      </div>
    </div>

    <script type="module" src="/scripts.js"></script>
  </body>
</html>